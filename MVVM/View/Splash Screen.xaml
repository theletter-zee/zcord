<Window x:Class="Zcord.Splash_Screen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zcord"
        mc:Ignorable="d"
        Height="450" Width="650"
        Background="Transparent" ContentRendered="Window_ContentRendered">


    <Grid Background="#0a1627">
        <Image Source="loadingBanner.png"/>
        <ProgressBar Name="progressBar" Value="{Binding Progress}" Width="200" Height="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,333,0,0" />
    </Grid>
</Window>
